{% form_theme formProjet 'bootstrap_4_layout.html.twig' %}
 
{% block create %}

{% if editMode %}
<h1>Modifier le projet</h1>
{% else %}
<h1>Cr√©er un projet</h1>
{% endif %}



{{ form_start(formProjet) }}

{{ form_row(formProjet.title, {'attr': {'placeholder': "Nom du projet"}}) }}
