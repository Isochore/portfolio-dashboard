{% extends 'dashboard.html.twig' %}

{% block show %}


{% for projet in projets %}

        <div>
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h2>{{ projet.title }}</h2>
                </div>
                <div>
                    <a class="btn btn-primary align-self-start mt-2 mr-2" href="{{ path('show_projet', {'id' :projet.id}) }}">
                        <i class="fas fa-info-circle ml-2 mr-2 fa-2x"></i>
                    </a>
                    <a class="btn btn-primary align-self-start mt-2" href="{{ path('edit_projets', {'id' :projet.id}) }}">
                        <i class="fas fa-pencil-alt ml-2 pr-2 fa-2x"></i>
                    </a>
                </div>
            </div>
        </div>


        <hr class="mt-5">

{% endfor %}

{% endblock %}
