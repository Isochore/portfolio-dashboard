{% extends 'dashboard.html.twig' %}


{% block show_one %}
    
        <h2>{{ projet.title }}</h2>
        <p>{{ projet.content | raw }}</p>
        <img src="{{ projet.image }}" alt="">
        <div class="d-flex flex-column">
            <a class="mt-2" href="{{ projet.link }}">Lien du projet</a>
            <a class="mt-2" href="{{ projet.git }}">Lien du git</a>
        </div>
        <div class="d-flex">
            <p class="mt-2">Technologies :
                {% for techno in projet.technology %}
                    {% if loop.index == projet.technology | length - 1 %}
                        {{ techno.name }}
                    {% elseif loop.index == projet.technology | length %}
                        et {{ techno.name }}
                    {% else %}
                        {{ techno.name }},
                    {% endif %}
                {% endfor %}
            </p>
        </div>
        <div>
            <a class="btn btn-primary align-self-start mt-2" href="{{ path('edit_projets', {'id' :projet.id}) }}">
                <i class="fas fa-pencil-alt ml-2 pr-2 fa-2x"></i>
            </a>
            <a class="btn btn-danger align-self-start mt-2" href="{{ path('delete_projets', {'id' :projet.id}) }}">
                <i class="fas fa-trash-alt ml-2 pr-2 fa-2x"></i>
            </a>
        </div>


{% endblock %}